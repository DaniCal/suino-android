<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_add_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardElevation="0dp"
    >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentStart="true"

        android:layout_marginStart="@dimen/card_margin_side">
        <ImageView
            android:id="@+id/iv_bulletPoint_course_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bullet_point_course_date"
            />
        <LinearLayout
            android:layout_toEndOf="@id/iv_bulletPoint_course_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/card_margin_side">
            <borell.com.suino.LatoTextView
                android:id="@+id/tv_day_course_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_small"
                android:text="Wednesday"
                custom:typefaceAsset="fonts/Lato-Black.ttf"
                />
            <borell.com.suino.LatoTextView
                android:id="@+id/tv_freq_course_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimaryDark"
                android:textSize="@dimen/text_size_tiny"
                android:text="Weekly"
                custom:typefaceAsset="fonts/Lato-Bold.ttf"
                />


        </LinearLayout>




    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rv_times"
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/card_margin_side"
        >
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/lineListColor"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        ></LinearLayout>


</android.support.v7.widget.CardView>
