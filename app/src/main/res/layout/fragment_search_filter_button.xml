<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_filter_button"
        android:layout_below="@+id/rl_search_input"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        card_view:cardCornerRadius="@dimen/card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <borell.com.suino.view.LatoTextView
                android:id="@+id/tv_filter_category"
                custom:typefaceAsset="fonts/Lato-Semibold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="9dp"
                android:textSize="@dimen/text_size_medium"
                android:text="Add Filter"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info_search_class_xxxhdpi"
                android:layout_below="@+id/tv_filter_category"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>